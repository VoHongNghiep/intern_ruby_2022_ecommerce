<section class="h-100 h-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12">
        <div class="card card-registration card-registration-2" style="border-radius: 15px;">
          <div class="card-body p-0">
            <div class="row g-0">
              <div class="col-lg-8">
                <% if  current_cart.blank? %>
                  <h3 class="fw-bold mb-5 mt-2 pt-1 no_product"><%= t ".no_product" %></h3>
                <% else %>
                  <div class="p-5">
                    <div class="d-flex justify-content-between align-items-center mb-5">
                      <h3 class="fw-bold mb-0 text-black"><%= t ".shopping_cart" %></h3>
                    </div>
                    <hr class="my-4">
                    <div class="row mb-4 d-flex justify-content-between align-items-center">
                      <div class="basket">
                        <div class="basket-labels">
                          <ul>
                            <li class="item item-heading">
                              <%= t ".item"%>
                            </li>
                            <li class="price">
                              <%= t ".price"%>
                            </li>
                            <li class="quantity">
                              <%= t ".quantity"%>
                            </li>
                            <li class="subtotal">
                              <%= t ".subtotal"%>
                            </li>
                          </ul>
                        </div>
                        <%= render partial: "product", collection: @products %>
                      </div>
                    </div>
                    <hr class="my-4">
                  </div>
                <% end %>
              </div>
              <div class="col-lg-4 bg-grey">
                <div class="p-5">
                  <h3 class="fw-bold mb-5 mt-2 pt-1"><%= t ".summary" %></h3>
                  <hr class="my-4">
                  <div class="d-flex justify-content-between mb-4">
                    <h5 class="text-uppercase">
                      <%= t ".items"%>
                      <%= current_cart.values.sum %></h5>
                  </div>
                  <hr class="my-4">
                  <div class="d-flex justify-content-between mb-5">
                    <h5 class="text-uppercase"> <%= t ".total_price"%> </h5>
                    <h5><%= number_to_currency total_cart, negative_format: "(%u%n)" %></h5>
                  </div>
                  <button id="order" type="button" class="btn btn-dark btn-block btn-lg"
                    ><%= t ".register"%> </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
