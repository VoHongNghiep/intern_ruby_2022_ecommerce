<%= form_tag(admin_search_path, method: "get" ) do %>
  <div class="row">
    <div class="col-12">
      <div class="input-group mb-5">
        <div class="col-8"></div>
        <div class="col-3">
          <%= select_tag "filter" , options_for_select([
              t("admin.product.filter.select") ,
              t("admin.product.filter.newest") ,
              t("admin.product.filter.uncate") ])%>
        </div>
        <div class="col-1">
          <%= submit_tag "Submit" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
