<div class = "container">
  <h1><%= t "admin.product.products" %></h1>

  <%= link_to t("admin.product.new_product"), new_admin_product_path, class: "btn btn-outline-success" %>
  <%= render "search_form" %>
  <table class = "table">

    <thead>
      <tr>
        <th><%= t "admin.product.name" %></th>
        <th><%= t "admin.product.price" %></th>
        <th><%= t "admin.product.quantity_in_stock" %></th>
        <th><%= t "admin.product.category" %></th>
        <th><%= t "admin.category.content" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @products %>
    </tbody>
  </table>
  <%== pagy_bootstrap_nav(@pagy) %>
  <br>
</div>
