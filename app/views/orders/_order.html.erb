<tbody>
  <tr>
    <th scope="row"><%= order.id %></th>
    <td><%= order.amount %></td>
    <% if order.status == "0" %>
      <td><div class="btn btn-info"><%= t "static_pages.pending" %></div></td>
    <% elsif order.status == "1" %>
      <td><div class="btn btn-primary"><%= t "static_pages.shipping" %></div></td>
    <% elsif order.status == "2" %>
      <td><div class="btn btn-success"><%= t "static_pages.delivered" %></div></td>
    <% elsif order.status == "3" %>
      <td><div class="btn btn-warning"><%= t "static_pages.canceled" %></div></td>
    <% else %>
      <td><div class="btn btn-danger"><%= t "static_pages.rejected" %></div></td>
    <% end %>
    <td>
      <%= link_to order_detail_path(order.id) do %>
        <i class="fa-solid fa-eye"></i>
      <% end %>
      <% if order.status != "1" %>
        <%= link_to order_path(order.id), method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      <% end %>
      <% if order.status == "0" %>
        <%= link_to change_order_path(order.id), method: :get, data: { confirm: 'Are you sure?' } do %>
          <i class="fa fa-times" aria-hidden="true"></i>
        <% end %>
      <% end %>
    </td>
  </tr>
</tbody>