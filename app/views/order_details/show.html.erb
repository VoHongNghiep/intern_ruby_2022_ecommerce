<div class="container">
  <h2>Danh sách sản phẩm của #Order <%= @order_id %></h2>
  <br>
  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Tên</th>
        <th scope="col">Giá</th>
        <th scope="col">Số lượng</th>
        <th scope="col">Đánh giá</th>
      </tr>
    </thead>
    <% @ods.each do |od| %>
      <tbody>
        <tr>
          <th scope="row"><%= od.product.name %></th>
          <td><%= od.price %></td>
          <td><%= od.quantity %></td>
          <td>
            <%= link_to "Đánh giá", rating_path(od.product.id), class: "btn btn-info" %>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>